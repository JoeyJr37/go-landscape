extends layout

block content
  h1 Name: #{staff.first_name} #{staff.last_name}

    hr
  p
    a(href=staff.url+'/update') Edit Personal Info

  p #[strong DOB:] #{staff.date_of_birth}
  p #[strong Phone:] #{staff.phone_number}
  p #[strong Email:] #{staff.email_address}
  p #[strong Location:] #{staff.location.city} #{staff.location.country}
  p #[strong Field Staff Pastor:] #{staff.pastor}
  p #[strong Position:] #{staff.position.title}

  div(style='margin-left:20px;margin-top:20px')
    h4 History

    each val in history
      hr
      p #[strong Update:] #{val.status_message}
      p #[strong Date:] #{val.updated}
