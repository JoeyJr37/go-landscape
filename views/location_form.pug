extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='city') City:
      input#name.form-control(type='text', placeholder='Houston, Denver, etc.' name='city' value=(undefined===location ? '' : location.city))
      
      label(for='country') Country:
      input#name.form-control(type='text', placeholder='USA, India, etc.' name='country' value=(undefined===location ? '' : location.country))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg